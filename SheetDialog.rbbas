#tag ModuleProtected Module SheetDialog	#tag Method, Flags = &h0		Sub errboxshow(extends w as window, errtitle as string, errmsg as string)		  Dim b as MessageDialogButton //for handling the result		  Dim d as New MessageDialog //declare the MessageDialog object		  d.icon=MessageDialog.GraphicCaution //display warning icon		  d.ActionButton.Caption="OK"		  d.Message=errtitle		  d.Explanation=errmsg		  b=d.ShowModalWithin(w.TrueWindow)		End Sub	#tag EndMethod	#tag Note, Name = Usage		This shows a sheet message dialog on a window. Works only on Mac OS X. Part of MAL Client OS X and covered under GPL V3				Usage:		Self.errboxshow("Message Line 1","Message Line 2")			#tag EndNoteEnd Module#tag EndModule